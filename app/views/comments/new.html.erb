<h2>コメントを追加</h2>
<%= form_for @comment, :url => {:action => 'create'}  do |f| %>

<p>
	<%= f.text_area :text, placeholder:'enter text' %>

	<% if @comment.errors.messages[:text].any? %>
	
		<span class="error">
		<%= @comment.errors.messages[:text][0] %>		
	</span>

	<% end %>
</p>

<p>
	<%= f.submit %>

</p>


<% end %>