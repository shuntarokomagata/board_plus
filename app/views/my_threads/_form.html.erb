<%= form_for @my_thread do |f| %>
  <p>
	<%= f.text_field :title, placeholder:'enter title' %>
  </p>

  <p>
	<%= f.text_area :text, placeholder:'enter text' %>
  </p>

  <p>
	<%= f.submit %>
  </p>

  <% @my_thread.errors.full_messages.each do |message| %>
      <li> <%= message %></li>
  <% end %>


<% end %>